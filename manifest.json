{
    "manifest_version": 3,
    "name": "Toolbox 工具箱",
    "version": "1.0.0",
    "description": "专业的开发者工具箱，提供JSON格式化、代码美化、进制转换、密码生成、简繁体转换等实用功能",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png"
    },
    "action": {
        "default_title": "Toolbox 工具箱",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "homepage_url": "https://github.com/your-username/toolbox",
    "author": "Toolbox Team"
}